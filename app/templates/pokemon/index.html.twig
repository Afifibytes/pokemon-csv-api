{% extends 'base.html.twig' %}

{% block title %}Hello PokemonController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    table, th, td {
        border: 1px solid black;
    }

</style>

<div class="example-wrapper">
    <h1>Pokemons count {{ pokemons|length }}! âœ…</h1>
    <table>
        <tr>
            <th>id</th>
            <th>serial</th>
            <th>name</th>
            <th>type1</th>
            <th>type2</th>
            <th>total</th>
            <th>hp</th>
            <th>attack</th>
            <th>defense</th>
            <th>spAtk</th>
            <th>spDef</th>
            <th>speed</th>
            <th>generation</th>
            <th>legendary</th>
        </tr>
        {% for pokemon in pokemons %}
            <tr>
                <td>{{ pokemon.id }}</td>
                <td>{{ pokemon.serial }}</td>
                <td>{{ pokemon.name }}</td>
                <td>{{ pokemon.type1 }}</td>
                <td>{{ pokemon.type2 }}</td>
                <td>{{ pokemon.total }}</td>
                <td>{{ pokemon.hp }}</td>
                <td>{{ pokemon.attack }}</td>
                <td>{{ pokemon.defense }}</td>
                <td>{{ pokemon.spAtk }}</td>
                <td>{{ pokemon.spDef }}</td>
                <td>{{ pokemon.speed }}</td>
                <td>{{ pokemon.generation }}</td>
                <td>{{ pokemon.legendary }}</td>
            </tr>
        {% endfor %}

    </table>
</div>
{% endblock %}
